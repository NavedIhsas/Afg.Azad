@page
@using _0_FrameWork.Application
@model WebHost.Areas.Administration.Pages.Quiz.IndexModel
@{
    ViewData["Title"] = "لیست امتحانات";
}
<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a permission="PermissionPlace.CreateQuiz" class="btn btn-success btn-rounded" href="#showmodal=@Url.Page("./Index", "Create")">ایجاد امتحان جدید</a>
            <a permission="PermissionPlace.ListQuiz" class="btn btn-info btn-rounded" href="./Quiz/Questions">سوالات</a>
        </p>
    </div>
</div>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    لیست امتحان ها (@Model.List.Count)
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr role="row" class="text-center">
                                        <th class="sorting" tabindex="0" aria-controls="dataTables" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 50px;"> # </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables" >نام </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables" >کورس </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables" >وضعیت </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables" >تاریخ برگزاری </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables" >زمان برگزاری </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables" >زمان پایان </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables" >تاریخ ایجاد </th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 242px;">عملیات</th>
                                    </tr>

                                </thead>
                                <tbody>
                                    @foreach (var article in Model.List)
                                    {
                                        <tr class="gradeU odd">
                                            <td class="">@article.Id</td>
                                            <td>
                                                <a asp-page="/SingleArticle" asp-route-id="@article.Slug" class="text-primary">@article.Name</a>
                                            </td>
                                            <td>@article.CourseName</td>
                                            <td>@article.Status</td>
                                            <td>@article.OnDate</td>
                                            <td>@article.Time</td>
                                            <td>@article.PeriodTime</td>
                                            <td class="sorting_1">@article.CreationDate</td>
                                            <td class="center ">
                                                <a Permission="@PermissionPlace.EditQuiz" class="btn btn-warning text-center" href="#showmodal=@Url.Page("./Index", "Edit", new { id = article.Id})">ویرایش</a>
                                                <a Permission="@PermissionPlace.AddQuestion" class="btn btn-warning text-center" href="#showmodal=@Url.Page("./Index", "AddQuestion", new { id = article.Id})">افزودن سوال</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>