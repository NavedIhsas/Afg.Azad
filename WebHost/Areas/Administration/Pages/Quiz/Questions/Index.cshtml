@page
@using _0_FrameWork.Application
@model WebHost.Areas.Administration.Pages.Quiz.Questions.IndexModel
@{
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a permission="PermissionPlace.AddQuestion" class="btn btn-success btn-rounded" href="#showmodal=@Url.Page("./Index", "AddQuestion")">افزودن سوال جدید</a>
        </p>
    </div>
</div>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    لیست امتحان ها (@Model.List.Count)
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr role="row" class="text-center">
                                        <th class="sorting" tabindex="0" aria-controls="dataTables" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 50px;"> # </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables">سوال </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables">جواب درست </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables">نمره </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables">گزینه درست </th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 242px;">عملیات</th>
                                    </tr>

                                </thead>
                                <tbody>
                                    @foreach (var article in Model.List)
                                    {
                                        <tr class="gradeU odd">
                                            <td class="">@article.Id</td>
                                            <td>@article.QuizName</td>
                                            <td>@article.QuestionName</td>
                                            <td>@article.CorrectAnswerPoints</td>
                                            <td>@article.CorrectAnswer</td>
                                            <td class="center ">
                                                <a Permission="@PermissionPlace.EditQuiz" class="btn btn-warning text-center" href="#showmodal=@Url.Page("./Index", "Edit", new { id = article.Id})">ویرایش</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>