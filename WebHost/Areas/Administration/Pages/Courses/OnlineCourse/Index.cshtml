@page
@model WebHost.Areas.Administration.Pages.Courses.OnlineCourse.IndexModel
@{
    ViewData["Title"] = "کورس های آنلاین";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-6 mr-3">
            <h2 class="page-header pull-left">
                <a class="btn btn-success btn-rounded" href="#showmodal=@Url.Page("./Index", "Create")">افزودن لینک جدید</a>
            </h2>
        </div>  <div class="col-lg-6">
            <h2 class="page-header">لینک کورس های آنلاین</h2>
        </div>

        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    لیست لینک ها( @Model.List.Count)
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <hr />
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTable" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr role="row" class="text-center">
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 50px;"> # </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 244px;" aria-sort="ascending"><strong>عنوان</strong> </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 244px;" aria-sort="ascending"><strong>زمان    </strong> </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 244px;" aria-sort="ascending"><strong>لینک</strong> </th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 242px;">عملیات</th>
                                    </tr>

                                </thead>
                                <tbody>
                                    @foreach (var item in Model.List)
                                    {
                                        <tr class="gradeU odd">
                                            <td class="">@item.Id</td>
                                            <td class="sorting_1">@item.Title</td>
                                            <td class="sorting_1">@item.Time</td>
                                            <td class="sorting_1">
                                                <a target="_blank" href="@item.Url">@item.Url</a>
                                            </td>
                                            <td class="center ">
                                                <a class="btn btn-warning text-center" href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id})">ویرایش</a>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
