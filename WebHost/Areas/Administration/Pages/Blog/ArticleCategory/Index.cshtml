@page
@using _0_FrameWork.Application
@model WebHost.Areas.Administration.Pages.Blog.ArticleCategory.IndexModel
@{
    ViewData["Title"] = "گروه مقاله ها";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a permission="PermissionPlace.CreateUsers" class="btn btn-success btn-rounded" href="#showmodal=@Url.Page("./Index", "Create")">ایجاد کاربر جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در گروه مقاله ها</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <input asp-for="SearchModel.Name" type="text"  class="form-control" placeholder="عنوان گروه..." />
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                   لیست گروه ها (@Model.List.Count)
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr role="row" class="text-center">
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 50px;"> # </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 244px;" aria-sort="ascending">عنوان </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 244px;" aria-sort="ascending">نمایش ترتیب </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 244px;" aria-sort="ascending">تعداد مقاله ها </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 244px;" aria-sort="ascending">تاریخ ایجاد </th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 242px;">عملیات</th>
                                    </tr>

                                </thead>
                                <tbody class="text-center">
                                    @foreach (var course in Model.List)
                                    {
                                        <tr class="gradeU odd">
                                            <td class="">@course.Id</td>
                                            <td >@course.Name</td>
                                            <td >@course.ShowOrder</td>
                                            <td >@course.ArticleCount</td>
                                            <td >@course.CreationDate</td>

                                            <td class="center ">
                                                <a Permission="PermissionPlace.EditArticleCategories" class="btn btn-warning text-center" href="#showmodal=@Url.Page("./Index", "Edit", new { id = course.Id})">ویرایش</a>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                    <!-- /.table-responsive -->
                    <div class="well">
                        <h4>طرزالعل:</h4>
                        <p>لطفا قبل این دستورالعمل هارا با دقت بیخوانید</p>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>

