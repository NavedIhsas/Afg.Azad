@page
@using _0_Framework.Application
@using _0_FrameWork.Application
@model WebHost.Areas.Administration.Pages.Slider.IndexModel
@{
    ViewData["Title"] = "اسلایدر";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a Permission="PermissionPlace.CreatePhotoHomePage" class="btn btn-info btn-rounded" asp-page="Index" asp-page-handler="Create">اسلایدر جدید</a>
            <a permission="PermissionPlace.CreateColleagueDiscount" class="btn btn-success btn-rounded" asp-page="Index" asp-page-handler="CreateText">تغییر متن اسلایدر</a>

        </p>
    </div>
</div>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    لیست
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <hr/>
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables" aria-describedby="dataTables-example_info">
                                <thead>
                                <tr role="row" class="text-center">
                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending"> # </th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending">متن بزرگ</th>

                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending">متن کوچک</th>

                                    <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">عملیات</th>
                                </tr>

                                </thead>
                                <tbody>
                                @foreach (var photo in Model.List)

                                {
                                    <tr class="gradeU odd">
                                        <td>@photo.Id</td>
                                        <td>@photo.Title</td>
                                        <td>@photo.ShortTitle</td>
                                        <td>
                                            @photo.CreationDate.ToFarsi()
                                        </td>
                                        <td class="center ">
                                                <a permission="PermissionPlace.EditColleagueDiscount" class="btn btn-warning text-center" asp-page="Index" asp-page-handler="Edit" asp-route-id="@photo.Id">ویرایش</a>
                                            </td>
                                    </tr>
                                }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>