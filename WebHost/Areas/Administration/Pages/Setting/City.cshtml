@page
@using _0_FrameWork.Application
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using WebHost.Utilities.Filters.Permission
@model WebHost.Areas.Administration.Pages.Setting.CityModel
@{
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a  class="btn btn-success btn-rounded" href="#showmodal=@Url.Page("./City", "Create")">افزودن شهر جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در شهر ها</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <input asp-for="SearchModel.City" type="text" class="form-control" placeholder="نام شهر..." />

                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    لیست شهر ها (@Model.List.Count)
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr role="row" class="text-center">
                                        <th class="sorting" tabindex="0" aria-controls="dataTables" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 50px;"> # </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 244px;" aria-sort="ascending">شهر </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 244px;" aria-sort="ascending">ولایت </th>
                                       
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 242px;">عملیات</th>
                                    </tr>

                                </thead>
                                <tbody>
                                    @foreach (var city in Model.List)
                                    {
                                        <tr class="gradeU odd">
                                            <td class="">@city.Id</td>
                                            <td class="">@city.City</td>
                                            <td class="">@city.Province</td>
                                            <td class="center ">
                                                <a  class="btn btn-warning text-center" href="#showmodal=@Url.Page("./City", "Edit",new {Id=city.Id})">ویرایش</a>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>